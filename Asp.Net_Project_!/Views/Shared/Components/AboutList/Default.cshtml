@using Entity_Layer.Concrete
@model List<About>
    <div class="section pt-4 px-3 px-lg-4" id="about">
        <div class="container-narrow">
            @foreach (var item in Model)
            {
            <div class="row">
                <div class="col-md-6">
                    <h2 class="h4 my-2">@item.aboutTitle</h2>
                    <p>@item.aboutDescription</p>
                    <div class="row mt-3">
                        <div class="col-sm-2">
                            <div class="pb-1">Yaş : </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.aboutAge</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">e-Mail : </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.aboutMail</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Telefon : </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.aboutPhone</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Adres : </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.aboutAddress</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="@item.aboutImageUrl" width="400" height="400" alt="Mehmetcan Demir" /></div>
            </div>
            }
        </div>
    </div>
@using Entity_Layer.Concrete
@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>

                        <tr>
                            <th>#</th>
                            <th>Platform</th>
                            <th>Eylem I</th>
                            <th>Eylem II</th>
                            <th>Eylem III</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.socialMediaID</td>
                            <td>@item.socialMediaTitle</td>
                            <td>
                                @if (item.status == true)
                                {
                                    @if (item.socialMediaIcon == item.socialMediaTitle)
                                    {
                                        <a href="@item.socialMediaUrl" class="btn btn-outline-primary">Git</a>
                                    }
                                    else if (item.socialMediaIcon == item.socialMediaTitle)
                                    {
                                        <a href="@item.socialMediaUrl" class="btn btn-outline-primary">Git</a>
                                    }

                                    else if (item.socialMediaIcon == item.socialMediaTitle)
                                    {
                                        <a href="@item.socialMediaUrl" class="btn btn-outline-primary">Git</a>
                                    }

                                    else if (item.socialMediaIcon == item.socialMediaTitle)
                                    {
                                        <a href="@item.socialMediaUrl" class="btn btn-outline-primary">Git</a>
                                    }
                                }
                                else
                                {
                                    <a href="@item.socialMediaUrl" class="btn btn-outline-primary">Git</a>
                                }
                            </td>
                            <td><a href="/SocialMedia/DeleteSocialMedia/@item.socialMediaID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/SocialMedia/UpdateSocialMedia/@item.socialMediaID" class="btn btn-outline-info">Güncelle</a></td>
                            <td>
                                @if (item.status == true)
                                {
                                    <a class="btn btn-outline-primary">Kullanılıyor</a>
                                }
                                else if (item.status == false)
                                {
                                    <a class="btn btn-outline-warning">Kullanılmıyor</a>
                                }
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <a href="/SocialMedia/AddSocialMedia" class="btn btn-outline-behance">Platform Ekle</a>
            </div>
        </div>
    </div>
</div>
@model Entity_Layer.Concrete.Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@*@using (Html.BeginForm("AddTestimonial", "Testimonial", FormMethod.Post))*@
    <form asp-action="AddTestimonial">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-description">Referans Ekleme Paneli</p>
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        <input type="text" class="form-control" asp-for="@Model.testimonialClientName">
                    </div>
                    <div class="form-group">
                        <label>Şirketi</label>
                        <input type="text" class="form-control" asp-for="@Model.testimonialCompany">
                    </div>
                    <div class="form-group">
                        <label>Yorumunuz</label>
                        <input type="text" class="form-control" asp-for="@Model.testimonialComment">
                    </div>
                    <div class="form-group">
                        <label>Resim Yolu</label>
                        <input type="text" class="form-control" asp-for="@Model.testimonialImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Göreviniz</label>
                        <textarea class="form-control" asp-for="@Model.testimonialTask"></textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-info">Kaydet</button>
                    <button class="btn btn-outline-danger">İptal</button>
                </div>
            </div>
        </div>
    </form>
@using Entity_Layer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Portföyden gelen mesaj listesi</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Öngörü</th>
                            <th>e-Mail</th>
                            <th>Tarih</th>
                            <th>Opsiyon |</th>
                            <th>Opsiyon ||</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.messageID</td>
                                <td>@item.messageTitle</td>
                                <td>@item.messageMail</td>
                                <td>@item.Date</td>
                                <td>
                                    <a href="/ContactMessage/DeleteContactMessage/@item.messageID" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/ContactMessage/ContentDetails/@item.messageID" class="btn btn-outline-info">Mesajı Gör</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

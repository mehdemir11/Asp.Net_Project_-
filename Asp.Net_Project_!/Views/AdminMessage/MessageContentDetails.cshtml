@model Entity_Layer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageContentDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Mesaj Detay</p>
            <form class="forms-sample">
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.WriterMessageID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Öngörü</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>tarih</label>
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Gönderen e-Mail</label>
                    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Alıcı e-Mail</label>
                    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x => x.MessageContent, 10, 3, new { @class = "form-control" })
                </div>
                <a href="/AdminMessage/InBox/" class="btn btn-outline-info">Gelen Kutusu</a>
                <a href="/AdminMessage/OutBox/" class="btn btn-outline-behance">Giden Kutusu</a>
            </form>
        </div>
    </div>
</div>
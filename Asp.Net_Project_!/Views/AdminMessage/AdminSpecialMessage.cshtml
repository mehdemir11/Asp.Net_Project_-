@using Entity_Layer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "AdminSpecialMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimlerim</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Unvan</th>
                            <th>Eylem</th>
                            <th>Eylem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.messageTitle</td>
                                <td>@item.messageMail</td>
                                <td><p>@item.messageContent.Substring(0, 15)...</p></td>
                                <td>@(((DateTime) item.Date).ToString("dd-MMM-yyyy-dddd"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Experience/AddExperience" class="btn btn-outline-behance">Deneyim Ekle</a>
            </div>
        </div>
    </div>
</div>

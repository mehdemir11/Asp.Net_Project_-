@model Entity_Layer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminSendMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Mesaj Gönder</h3>
</div>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample">
                <div class="form-group">
                    <label>Alıcı</label>
                    @Html.TextBoxFor(x => x.Receiver, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Öngörü</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>İçerik</label>
                    @Html.TextAreaFor(x => x.MessageContent, 3, 10, new { @class = "form-control" })
                </div>
                <a href="/AdminMessage/InBox/" class="btn btn-outline-info">Gönder</a>
                <a href="/AdminMessage/InBox/" class="btn btn-outline-warning">İptal</a>
            </form>
        </div>
    </div>
</div>
